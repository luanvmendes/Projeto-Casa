@model ProjetoTeste.Models.Categoria

@{
    ViewData["Title"] = "Delete";
}

<header class="masthead">
    <div class="container d-flex h-100 align-items-center">
      <div class="mx-auto col-6 bg-light p-5">
        <h4 class="text-center">Excluir</h4>
        <h3>Tem certeza que deseja remover?</h3>
        <hr />
        <dl class="row">
            <dt class = "col">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class = "col">
                @Html.DisplayFor(model => model.Nome)
            </dd>
        </dl>
        
        <div class="section-secondary">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Excluir" class="btn btn-danger p-2" /> |
                <a asp-action="Index"><i class="fas fa-chevron-circle-left"></i> Voltar</a>
            </form>
        </div>
      </div>
    </div>
</header>
