@model IEnumerable<CasaShow.Models.Venda>

@{
    ViewData["Title"] = "Index";
    Layout = "/Areas/Identity/Pages/_Layout.cshtml";
}
<div class="container">
<div class="row col-12 align-items-start pt-5" >
    <div class="pt-5 col-12">
        @if (Model.Count() != 0) {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Data)
                        </th>
                        <th class="w-25">
                            @Html.DisplayNameFor(model => model.Evento.Imagem)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Evento)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Quantidade)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Total)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Data)
                            </td>
                            <td>
                                <img src="@item.Evento.Imagem" class = "img-fluid" >
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Evento.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantidade)
                            </td>
                            <td>
                                @String.Format("R$ {0:0.00}", item.Total).Replace(".", ",")
                            </td>
                            <td>
                                <form asp-action="Delete" asp-route-id="@item.Id">
                                    <button type="submit" class="btn btn-light py-1 px-2" ><i class="fas fa-trash text-danger"></i></button> 
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
    } else {
            <div class="row">
                <div class="col-12">
                    <h2 class="text-danger">Você ainda não fez nenhuma compra</h2>
                </div>
            </div>
        }
    </div>
</div>
</div>