@model CasaShow.DTO.CarrinhoDTO

@{
    ViewData["Title"] = "Create";
    Layout = "/Areas/Identity/Pages/_Layout.cshtml";
}

<section>
    <div class="row div-size align-items-center mx-0 py-5">
      <div class="mx-auto col-8 col-lg-4">
        <h4 class="text-center">Carrinho</h4>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EventoId" class="control-label"></label>
                <input asp-for="EventoId" type="hidden" value="@ViewBag.EventoId" />
                <input value="@ViewBag.EventoNome" class="form-control" readonly/>
                <span asp-validation-for="EventoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" value="1" min="1" max="@ViewBag.MaxQuantidade"/>
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" value="@ViewBag.Preco" readonly />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Comprar" class="btn btn-dark btn-lg" />
            </div>
        </form>
        <div class="hover-white">
            <a asp-action="Index"><i class="fas fa-chevron-circle-left"></i> Voltar</a>
        </div>
      </div>
    </div>
</section>
