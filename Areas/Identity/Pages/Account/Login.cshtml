@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<header class="masthead">
    <div class="container d-flex h-100 align-items-center text-white">
      <div class="mx-auto col-6">
        <form id="account" method="post">
            <h4 class="text-center">@ViewData["Title"]</h4>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-light p-3">Entrar</button>
            </div>
            <div class="form-group text-center hover-white">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-white">Esqueci minha senha</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-white">Criar nova conta.</a>
                </p>
            </div>
        </form>
      </div>
    </div>
  </header>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
